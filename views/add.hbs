<script>
  const anhdaidienInput = document.getElementById('anhdaidien');
const fileanhdaidienInput = document.getElementById('fileanhdaidien');

anhdaidienInput.addEventListener('input', () => { 
  if (anhdaidienInput.value) {
    fileanhdaidienInput.disabled = true;  
  } else {
    fileanhdaidienInput.disabled = false;
  }
});

fileanhdaidienInput.addEventListener('input', () => {
  if (fileanhdaidienInput.value) {
    anhdaidienInput.disabled = true;
  } else {
    anhdaidienInput.disabled = false;
  }
});

</script>